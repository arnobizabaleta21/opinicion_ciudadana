@{
    Layout = null;
}

<link rel="stylesheet" href="~/Content/CSSUser/stylesCiud.css" type="text/css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<head>
    <title>Iniciar Sesión Ciudadano</title>
</head>
<div class="sidenav">
    <div class="login-main-text">
        <h1>Participación ciudadana</h1><br>
        <h2>Inicio de sesión</h2><br><br><br>
        <p>Inicia sesión o regístrate desde aquí para acceder.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form method="post" action="@Url.Action("Index","AccesoCiud")">
                <div class="form-group">
                    <label>Usuario: </label>
                    <input type="text" name="NUM_DOCUMENTO" class="input" placeholder="Ingrese usuario" required />
                </div>
                <div class="form-group">
                    <label>Contraseña: </label>
                    <input type="password" name="CONTRASENA" class="input" placeholder="Ingrese contraseña" required />
                </div>
                  
                <div class="alert alert-info" role="alert">
                    @ViewBag.Message
                </div>
               
              
                <button type="submit" class="btn btn-black">Iniciar sesión</button>
                <button type="submit" class="btn btn-secondary">@Html.ActionLink("Registrarse", "Registrar", "AccesoCiud", new { @style = "color: white; text-decoration: none;" })</button>
                @if(ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert" >
                    @ViewData["Mensaje"]
                </div>
            }
            </form>
        </div>
    </div>
</div>

